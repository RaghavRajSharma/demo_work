- value = custom_field_value ? custom_field_value.date_value : Time.now
- if custom_field.name == 'DOM'
  = select_date(value, {:prefix => "custom_fields[#{custom_field.id}]", :field_name => "", :include_position => true, :prompt => !custom_field.required?, end_year: Date.today.year, start_year: (Date.today.year - 20)}, {:class => "dom_field #{custom_field.required? ? ' required' : ''}"})
- else
  = select_date(value, {:prefix => "custom_fields[#{custom_field.id}]", :field_name => "", :include_position => true, :prompt => !custom_field.required?}, {:class => (custom_field.required? ? "required" : "")})

